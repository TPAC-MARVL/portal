<form role="form" action="{{post_url}}" method="post">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel"><span class="glyphicon glyphicon-ok"></span>{{title}}</h4>
        </div>
        
        <div class="modal-body">
          <div class="modal-header-box">
            These virtual machines <span class="warning-sign">(
             {{#each item_names}} 
               {{this}}  
             {{/each}}
            )
            
            </span> 
            
              will be removed from the system.

          </div>
          <div class="modal-warning-box">
            <span class="confirm-sign glyphicon glyphicon-hand-right"></span> Are you sure?
          </div>
        </div>
        
        <div class="modal-footer">
          {{#each item_ids}}
             <input hidden type="checkbox" name="instance_ids" value="{{this}}" checked />
          {{/each}}
          <input type="hidden" name="csrfmiddlewaretoken" value="{{csrf_token}}">
          <button type="submit" class="btn btn-primary">submit</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
 </form>