<form role="form" action="{{post_url}}" method="post">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    
          <h4 class="modal-title" id="myModalLabel">
          {{#if view_type.reject_view}}
             <span class="warning-sign glyphicon glyphicon-warning-sign"></span>  
          {{/if}}
          
          {{#if view_type.approve_view}}
             <span class="glyphicon glyphicon-ok"></span>
          {{/if}}
                      
          {{title}}</h4>        
        
        </div>
        <div class="modal-body">   
           
           <div class="modal-header-box">
               
               You are going to 
               {{#if view_type.reject_view}}
                  reject the model requests
               {{/if}}
               
               {{#if view_type.approve_view}}
                  approve the model requests  
               {{/if}}               
                
               <span class="warning-sign">(
                
                   {{#each requests}}
                     {{this.display_id}}
                   {{/each}}
                
                )</span>.
           </div>
          
           <div class="add-member-box">
	           
	           <table class="table table-striped table-hover" id="admin-groups-list-table">
	              <thead>
				    <tr class="table-header">				      
				      <td>Request Id</td>
				      <td>Type</td>
		              <td>Submitted By</td>	    
				    </tr>
				  </thead>
	              <tbody>
	                  {{#each requests}}
	              
	                 <tr>
	                   <td>{{this.display_id}}</td>
	                   <td>{{this.type}}</td>
	                   <td>{{this.createdBy}}</td>
	                 </tr>
	                 
	                  {{/each}}
	              </tbody>
			    </table>
			    
		
			    
		    </div>
		    
		    	<div>
			      <label for="notes">Notes</label>
                  <textarea id="notes" name="notes" class="form-control" rows="5"></textarea>
			    </div>    
        </div>
        
        <div class="modal-footer">
          <input type="hidden" name="page_token" value="{{page_token}}">
          <input type="hidden" name="csrfmiddlewaretoken" value="{{csrf_token}}">
          
           {{#each requests}}
             <input type="hidden" name="request_ids[]" value="{{this.id}}">
             <input type="hidden" name="request_modified_times[]" value="{{this.modifiedTime}}">
           {{/each}}
           
          <button type="submit" class="btn btn-primary">submit</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
 </form>