<form role="form" action="{{post_url}}" method="post">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    
          <h4 class="modal-title" id="myModalLabel">
          {{#if view_type.delete_view}}
             <span class="warning-sign glyphicon glyphicon-warning-sign"></span>  
          {{/if}}
          
          {{#if view_type.insert_view}}
             <span class="glyphicon glyphicon-ok"></span>
          {{/if}}
          
          {{#if view_type.edit_view}}
            <span class="glyphicon glyphicon-ok"></span>
          {{/if}}
                      
          {{title}}</h4>        
        
        </div>
        <div class="modal-body">      
           <div class="modal-header-box">
               
               You are going to 
               {{#if view_type.delete_view}}
                 remove members from group
               {{/if}}
               
               {{#if view_type.insert_view}}
                 add members to group  
               {{/if}}
               
               {{#if view_type.edit_view}}
                 add or remove admins from group  
               {{/if}}
                
               <span class="warning-sign">({{group_name}})</span>.
           </div>
          
           <div class="add-member-box">
	           <table class="table table-striped table-hover" id="admin-groups-list-table">
	              <thead>
				    <tr class="table-header">
				      {{#if view_type.edit_view}}
				      
				      {{else}}
				        <td></td>
				      {{/if}}
				      
				      <td>Name</td>
				      <td>Email</td>
		              <td>Group Admin?</td>				    
				    </tr>
				  </thead>
	              <tbody>
	                 {{#each members}}
	                   <tr>
	                      {{#if view_type.edit_view}}
				      
				          {{else}}
				            <td><input type="checkbox" name="member_ids" value="{{this.id}}" /></td>
				         
	                      {{/if}}
	                     <td>{{this.name}}
	                         {{#if view_type.edit_view}}
	                           <input hidden type="checkbox" name="member_ids" value="{{this.id}}" checked="checked" />
	                         {{/if}}
	                     </td>
	                     <td>{{this.email}}</td>
	                     <td class="group-admin-select">
	                      {{#if this.view_type.delete_view}}
	                       {{#if this.is_group_admin}}
	                         yes
	                       {{else}}  
	                         no
	                       {{/if}}
	                     {{else}}
	                         {{#if this.view_type.edit_view}}
	                            {{#if this.is_group_admin}}
	                              <input type="checkbox" name="group_admins" value="{{this.id}}" checked="checked" />
	                            {{else}}  
	                              <input type="checkbox" name="group_admins" value="{{this.id}}" />
	                            {{/if}}
	                         {{else}}
	                              <input type="checkbox" name="group_admins" value="{{this.id}}" /> 
	                         {{/if}}
	                     {{/if}}
	                     </td>
	                   </tr>
	                 {{/each}}
	              </tbody>
			    </table>
		    </div>		    
        </div>
        
        <div class="modal-footer">
          <input type="hidden" name="page_token" value="{{page_token}}">
          <input type="hidden" name="csrfmiddlewaretoken" value="{{csrf_token}}">
          <input type="hidden" name="group_id" value="{{group_id}}">
          <button type="submit" class="btn btn-primary">submit</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
 </form>