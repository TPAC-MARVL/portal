<form role="form" action="{{post_url}}" method="post">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    
          <h4 class="modal-title" id="myModalLabel">
          {{#if view_type.delete_view}}
             <span class="warning-sign glyphicon glyphicon-warning-sign"></span>  
          {{/if}}
          
          {{#if view_type.insert_view}}
             <span class="glyphicon glyphicon-ok"></span>
          {{/if}}
          
          {{#if view_type.edit_view}}
            <span class="glyphicon glyphicon-ok"></span>
          {{/if}}
          
          {{title}}</h4>        
        
        </div>
        <div class="modal-body">      
           <div class="modal-header-box">
               
               You are going to 
               {{#if view_type.delete_view}}
                 remove instance from group
               {{/if}}
               
               {{#if view_type.insert_view}}
                 assign a new group to instance 
               {{/if}}
               
               {{#if view_type.edit_view}}
                 remove a group from instance  
               {{/if}}
                
               <span class="warning-sign">({{instance_name}})</span>.
           </div>
          
           <div class="add-member-box">
	           <table class="table table-striped table-hover" id="admin-groups-list-table">
	              <thead>
				    <tr class="table-header">
				        <td></td>
				      <td>Name</td>	    
				    </tr>
				  </thead>
	              <tbody>
	                 {{#each groups}}
	                     <tr>
				         <td class="modal-check-box">
				              {{#if view_type.insert_view}}	           
				                  <input type="checkbox" name="group_ids" value="{{this.id}}" />
				              {{/if}}
				              {{#if view_type.delete_view}}
				                  <input type="hidden" name="group_ids" value="{{this.id}}" />    
				              {{/if}}
				         </td>
	                     <td>{{this.name}}
	                     </td>
	                   </tr>
	                 {{/each}}
	              </tbody>
			    </table>
		    </div>		    
        </div>
        
        <div class="modal-footer">
          <input type="hidden" name="csrfmiddlewaretoken" value="{{csrf_token}}">
          <input type="hidden" name="instance_id" value="{{instance_id}}">
          <button type="submit" class="btn btn-primary">submit</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
 </form>